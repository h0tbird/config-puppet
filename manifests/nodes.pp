#------------------------------------------------------------------------------
# This class is required by all nodes:
#------------------------------------------------------------------------------

class base {

    # System users:
    class { 'user::marc': }
    class { 'user::debo': }

    # Motd module:
    class { 'motd': }

    # Ntp service:
    class { 'ntp': }

    # Samba service:
    class { 'samba':
        workgroup   => 'POPAPP',
        hosts_allow => '127. 192.168.1.',
    }
}

#------------------------------------------------------------------------------
# node1:
#------------------------------------------------------------------------------

node 'node1' {

    require base
}

#------------------------------------------------------------------------------
# node2:
#------------------------------------------------------------------------------

node 'node2' {

    require base
}
