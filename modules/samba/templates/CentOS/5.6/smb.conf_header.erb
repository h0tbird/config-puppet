#------------------------------------------------------------------------------
# Global Settings:
#------------------------------------------------------------------------------

[global]

    # Network Options:
<% if workgroup != :undef -%>    workgroup = <%= workgroup %>
<% end -%>
<% if server_string != :undef -%>    server string = <%= server_string %>
<% end -%>
<% if netbios_name != :undef -%>    netbios name = <%= netbios_name %>
<% end -%>
<% if interfaces != :undef -%>    interfaces = <%= interfaces %>
<% end -%>
<% if hosts_allow != :undef -%>    hosts allow = <%= hosts_allow %>
<% end -%>

    # Logging Options:
<% if log_file != :undef -%>    log file = <%= log_file %>
<% end -%>
<% if max_log_size != :undef -%>    max log size = <%= max_log_size %>
<% end -%>

    # Server Options:
<% if security != :undef -%>    security = <%= security %>
<% end -%>
<% if passdb_backend != :undef -%>    passdb backend = <%= passdb_backend %>
<% end -%>
<% if realm != :undef -%>    realm = <%= realm %>
<% end -%>
<% if password_server != :undef -%>    password server = <%= password_server %>
<% end -%>

    # Printing Options:
<% if load_printers != :undef -%>    load printers = <%= load_printers %>
<% end -%>
<% if cups_options != :undef -%>    cups options = <%= cups_options %>
<% end -%>

#------------------------------------------------------------------------------
# Share Definitions:
#------------------------------------------------------------------------------

[homes]

    comment = Home Directories
    browseable = no
    writable = yes
